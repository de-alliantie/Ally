    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["--environment", "dev"],
            "justMyCode": false
        },

        {
             "name": "streamlit debug",
            "type": "python",
            "request": "launch",
            "program": "/anaconda/envs/kschat/bin/streamlit/",    
            "args": ["run", "${workspaceFolder}/src/webapp/Chat met Ally.py", "--server.port", "8005"],
             "justMyCode": false,
        },
    ]
}